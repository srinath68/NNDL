        " from sympy import *\n",
        "x=Symbol('x')\n",
        "f=x**4+3*x**2+10\n",
        "#learning rate\n",
        "n=0.001\n",
        "max_iterations=1000\n",
        "iter=0\n",
        "fd=f.diff(x)\n",
        "f=lambdify(x,f)\n",
        "fd=lambdify(x,fd)\n",
        "x=10\n",
        "while iter<max_iterations:\n",
        "  x=x-(n*fd(x))\n",
        "  iter=iter+1\n",
        "else:\n",
        "  f=int(f(x))\n",
        "  x=int(x)\n",
        "  print(\"Minimun Value of f(x)=\"+str(f)+ \" at x=\"+str(x))"
